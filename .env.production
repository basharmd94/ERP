# Production(Remote) Env File
# ------------------------------------------------------------------------------

DEBUG=False
DJANGO_ENVIRONMENT="production"

# Security - IMPORTANT: Generate a new secret key for production!
SECRET_KEY="your-super-secure-production-secret-key-here-make-it-long-and-random"

# Database Configuration (Docker PostgreSQL)
POSTGRES_DB=fixit
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Configuration (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Production Security Settings
ALLOWED_HOSTS=206.191.180.107,localhost,your-domain.com
CSRF_TRUSTED_ORIGINS=http://206.191.180.107:8090,https://your-domain.com

# Optional: Database SSL (if your remote DB requires it)
# POSTGRES_SSL_MODE=require

# Optional: Logging
LOG_LEVEL=INFO